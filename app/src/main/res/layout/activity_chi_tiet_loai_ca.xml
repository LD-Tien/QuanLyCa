<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietLoaiCaActivity"
    android:background="@color/dark_blue">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgMovie"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/gradient_background_90"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/gradient_background_90"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgMovie"
                android:layout_marginTop="12dp"
                android:divider="@drawable/empty_tall_divider"
                android:orientation="vertical"
                android:padding="24dp"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/tvTenThuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên thường"
                    android:textColor="@color/light"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTenKhoaHoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:drawablePadding="8dp"
                        android:text="Tên khoa học"
                        android:textColor="@color/light"
                        android:textSize="20dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvMauSac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawablePadding="8dp"
                    android:text="Màu sắc"
                    android:textColor="@color/light"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvDacTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawablePadding="8dp"
                    android:gravity="top"
                    android:text="Đặc tính"
                    android:textColor="@color/light"
                    android:textSize="20dp" />

            </LinearLayout>

            <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
            <!--        android:id="@+id/fab"-->
            <!--        android:layout_width="wrap_content"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_alignParentRight="true"-->
            <!--        android:layout_alignParentBottom="true"-->
            <!--        android:backgroundTint="@color/tomato"-->
            <!--        app:srcCompat="@drawable/ic_baseline_arrow_back_36" />-->


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>